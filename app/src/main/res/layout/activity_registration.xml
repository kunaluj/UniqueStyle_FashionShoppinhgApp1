<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background="@color/casual"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17sp"
            android:background="@color/normalpurple"
            app:cardCornerRadius="24sp"
            app:cardElevation="24sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/yellowlemon">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/splashlogo"
                    android:layout_margin="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/griffy"
                    android:text="Register here"
                    android:textColor="@color/normalpurple"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>


                <EditText
                    android:id="@+id/etRegisterUserName"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/griffy"
                    android:hint="Username"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/normalpurple"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/etFullName"
                    android:hint="Full Name"
                    android:textColorHint="@color/normalpurple"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/griffy"
                    android:inputType="textPersonName"
                    android:layout_margin="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etRegisterMobileNo"
                    android:hint="Mobile Number"
                    android:textColorHint="@color/normalpurple"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/griffy"
                    android:inputType="number"
                    android:layout_margin="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etRegisterEmail"
                    android:hint="Email Address"
                    android:textColorHint="@color/normalpurple"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/griffy"
                    android:inputType="textEmailAddress"
                    android:layout_margin="8dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etRegisterNewPassword"
                    android:hint="Password"
                    android:textColorHint="@color/normalpurple"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/griffy"
                    android:inputType="textPassword"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etRegisterOTP"
                    android:hint="OTP"
                    android:textColorHint="@color/normalpurple"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/griffy"
                    android:inputType="text"
                    android:layout_margin="8dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:fontFamily="@font/griffy"
                    android:id="@+id/btnRegisterUser"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/normalpurple"
                    android:layout_marginTop="-17sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>