<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:layout_margin="16sp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ivLoginLogo"
        android:src="@drawable/splashlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoginTitle"
        android:text="Login Here"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/griffy"
        android:layout_below="@+id/ivLoginLogo"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tvLoginTitle" >

        <EditText
            android:id="@+id/etLoginUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_serif_display_italic"
            android:hint="Username"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:inputType="text"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/etLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_serif_display_italic"
            android:hint="Password"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbLoginShowHidePassword"
            android:text="Show Password"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:backgroundTint="@color/saffron"
            android:fontFamily="@font/dm_serif_display_italic"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:fontFamily="@font/dm_serif_display_italic"
            android:id="@+id/btnLoginLogin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/normalpurple"
            android:layout_marginTop="12sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvLoginNewUser"
            android:text="New User Click Here"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/griffy"
            android:layout_below="@+id/btnLoginLogin"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            />





    </LinearLayout>



</RelativeLayout>